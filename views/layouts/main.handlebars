<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{#if pageName}}
    <title>{{pageName}}</title>
    {{else}}
    <title>Code Trove</title>
    {{/if}}
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="css/styles.css" />
    <link
      type="text/css"
      rel="stylesheet"
      href="css/materialize.min.css"
      media="screen,projection"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Saira+Condensed:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
    <nav class="black">
      <div class="container">
        <div class="nav-wrapper">
          <a href="{{baseUrl}}" class="title">CODE TROVE</a>
          <a href="{{baseUrl}}" data-activates="side-nav" class="button-collapse show-on-large right">
            <i class="material-icons">menu</i></a>
          <ul class="right hide-on-med-and-down">
            {{#if loggedIn}}
              <li class="active">
              <li><a href="{{baseUrl}}/">HOME</a></li>
              <li><a href="{{baseUrl}}/about">ABOUT</a></li>
              <li><a href="{{baseUrl}}/contact">PROFILE</a></li>
              <li><a href="{{baseUrl}}/search"><i
                    class="material-icons"
                  >search</i></a></li>
              <li><a href="{{baseUrl}}/login" class="btn blue btn-small">Log Out</a></li>
            {{else}}
              <li><a href="{{baseUrl}}/">HOME</a></li>
              <li><a href="{{baseUrl}}/about">ABOUT</a></li>
              <li><a href="{{baseUrl}}/search"><i
                    class="material-icons"
                  >search</i></a></li>
              <li><a href="{{baseUrl}}/login" class="btn blue btn-small">Log in</a></li>
              <li><a href="{{baseUrl}}/signup" class="btn blue btn-small">Sign
                  up</a></li>
          </ul>
            {{/if}}
          <ul id="side-nav" class="side-nav">
            <li><a href="{{baseUrl}}/">HOME</a></li>
            <li><a href="{{baseUrl}}/about">ABOUT</a></li>
            <li><a href="{{baseUrl}}/search"><i
                  class="material-icons"
                >search</i></a></li>
            <li><a href="{{baseUrl}}/login" class="btn blue btn-small">Log in</a></li>
            <li><a href="{{baseUrl}}/signup" class="btn blue btn-small">Sign up</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <main>
      {{{body}}}
    </main>

    <footer>
      <div class="footer-content">
        <div class="footer-left">
          <p class="success-text">We got the code to your success.</p>
          <p class="sub-text">Transform your code, one snippet at a time.</p>
          <p class="centered"> &copy; 2023 Code Trove. All Rights Reserved.</p>
        </div>
        <div class="footer-middle">
          <a href="{{baseUrl}}/terms">Terms & Conditions</a>
          <a href="{{baseUrl}}/privacy">Privacy Policy</a>
        </div>
      </div>
    </footer>

    <!--Import jQuery before materialize.js-->
    <script
      type="text/javascript"
      src="https://code.jquery.com/jquery-3.2.1.min.js"
    ></script>
    <script type="text/javascript" src="js/materialize.min.js"></script>
    <script>
      $(document).ready(function () { // Initialize Side Nav
      $('.button-collapse').sideNav(); 
      });
    </script>
  </body>

</html>