{{! basic layout for the website, upon which the rest of the project is being built }}

<html lang='en'>

  <head>

    <!--Import Google Icon Font-->
    <link
      href='https://fonts.googleapis.com/icon?family=Material+Icons'
      rel='stylesheet'
    />

    <!--Import materialize.css-->
    <link
      type='text/css'
      rel='stylesheet'
      href='css/materialize.min.css'
      media='screen,projection'
    />
    <link type='text/css' rel='stylesheet' href='css/styles.css' />

    <!-- Import additional fonts and styles -->
    <link
      href='https://fonts.googleapis.com/css2?family=Saira+Condensed:wght@400;700&display=swap'
      rel='stylesheet'
    />
    <link
      rel='stylesheet'
      href='//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/styles/androidstudio.min.css'
    />

    <!--Let browser know website is optimized for mobile-->
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />

    {{#if pageName}}
      <title>{{pageName}}</title>
    {{else}}
      <title>Code Trove</title>
    {{/if}}

  </head>

  <body>
    <nav class='black'>
      <div class='container'>
        <div class='nav-wrapper'>
          <a href='/' class='brand-logo'>CODE TROVE</a>
          <a href='#' data-activates='mobile-demo' class='button-collapse'>
            <i class='material-icons'>menu</i>
          </a>
          <ul class='right hide-on-med-and-down'>
            {{#if loggedIn}}
              <li class='active'>
                <a href='/'>HOME</a>
              </li>
              <li>
                <a href='/about'>ABOUT</a>
              </li>
              <li>
                <a href='/profile'>PROFILE</a>
              </li>
              <li>
                <a href='/contact'>CONTACT US</a>
              </li>
              <li>
                <a href='/search'> <i class='material-icons'>search</i></a>
              </li>
              <li>
                <a id='logout' class='btn blue btn-small'>Log Out</a>
              </li>
            {{else}}
              <li>
                <a href='/'>HOME</a>
              </li>
              <li>
                <a href='/about'>ABOUT</a>
              </li>
              <li>
                <a href='/contact'>CONTACT US</a>
              </li>
              <li>
                <a href='/search'> <i class='material-icons'>search</i></a>
              </li>
              <li>
                <a href='/login' class='btn blue btn-small'>Log in</a>
              </li>
              <li>
                <a href='/signup' class='btn blue btn-small'>Sign up</a>
              </li>
            {{/if}}
          </ul>
          <!-- Side nav -->
          <ul id='mobile-demo' class='side-nav'>
            <li>
            </li>
            <li>
              <a href='/'>HOME</a>
            </li>
            <li>
              <a href='/about'>ABOUT</a>
            </li>
            <li>
              <a href='/contact'>CONTACT US</a>
            </li>
            <li>
              <a href='/search'> <i class='material-icons'>search</i></a>
            </li>
            {{#if loggedIn}}
              <li>
                <a id='logout2' class='btn blue btn-small'>Log Out</a>
              </li>
            {{else}}
              <li>
                <a href='/login' class='btn blue btn-small'>Log in</a>
              </li>
              <li>
                <a href='/signup' class='btn blue btn-small'>Sign up</a>
              </li>
            {{/if}}
          </ul>
        </div>
      </div>
    </nav>

    {{!-- add the different handlebar pages on the {{{body}}},
    based on the functionality of the routes --}}
    <main>
      {{{body}}}
    </main>

    <footer>
      <div class='footer-top'>
        <p class='success-text'>We got the code to your success.</p>
        <p class='sub-text'>Transform your code, one snippet at a time.</p>
      </div>
      <div class='footer-bottom'>
        <p class='copy'> &copy; 2023 Code Trove. All Rights Reserved.</p>
        <div class='footer-links'>
          <a href='/terms'>Terms & Conditions</a>
          <a href='/privacy'>Privacy Policy</a>
        </div>
      </div>
    </footer>

    <!--Import jQuery before materialize.js-->
    {{#if loggedIn}}
      <script src='/js/logout.js'></script>
    {{/if}}
    <script
      type='text/javascript'
      src='https://code.jquery.com/jquery-3.2.1.min.js'
    ></script>
    <script type='text/javascript' src='js/materialize.min.js'></script>
    <script>
      $(document).ready(function(){ $('.button-collapse').sideNav(); });
    </script>
    <script
      src='//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/highlight.min.js'
    ></script>
    <script>hljs.highlightAll();</script>
    <script>
      $(document).ready(function() { $('select').material_select(); });
    </script>
  </body>

</html>