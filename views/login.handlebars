<!-- login page -->

<div class='container'>
  <div class='row'>
    <div class='col s10 offset-s1 m8 offset-m2 l6 offset-l3'>
      <div id='post-feed'>
        {{!-- <div class='col s12 m4'></div>
        <div class='col s12 m4 center-align'> --}}
          <div id='login' class='card center-align'>
            <div class='card-content'>
              <span class='card-title'>Log In</span>
              <form id='login'>
                <div class='input-field'>
                  <input id='login_id' type='text' name='login_id' required />
                  <label for='login_id'>Email</label>
                </div>
                <div class='input-field'>
                  <input id='password' type='password' name='password' required />
                  <label for='password'>Password</label>
                </div>
                <button class='btn blue' type='submit'>Log In</button>
              </form>
            </div>
          </div>
          <div class='terms-box'>
            <p style='font-size: 16px'>
              Discover a better way to code.
              <a href='{{baseUrl}}/signup' style='color: green; font-weight: bold'>Sign up now!</a>
            </p>
          </div>
        </div>
        <div class='col s12 m4'></div>
      </div>
    </div>
  </div>
</div>

<script src='/js/login.js'></script>