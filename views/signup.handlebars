<div class='container'>
  <div class='row'>
    <div class='col s12'>
      <div class='col s12 m4'></div>
      <div class='col s12 m4 center-align'>
        <div id='signup' class='card'>
          <div class='card-content'>
            <span class='card-title'>Sign Up</span>
            <form id='signup-form'>
              <div class='input-field'>
                <input id='name' type='text' name='name' required />
                <label for='name'>Name</label>
              </div>
              <div class='input-field'>
                <input id='username' type='text' name='username' required />
                <label for='username'>Username</label>
              </div>
              <div class='input-field'>
                <input id='email-input' type='email' name='email' required />
                <label for='email'>Email</label>
              </div>
              <div class='input-field'>
                <input
                  id='password-input'
                  type='password'
                  name='password'
                  required
                />
                <label for='password'>Password</label>
              </div>
              <button class='btn blue' type='submit'>Sign Up</button>
            </form>
          </div>
        </div>
        <div class='terms-box'>
          <p class='small-font'>By clicking “Sign up”, you agree to our terms of
            service and acknowledge that you have read and understand our
            privacy policy and code of conduct.</p>
        </div>
      </div>
      <div class='col s12 m4'></div>
    </div>
  </div>
</div>

<script src='/js/signup.js'></script>