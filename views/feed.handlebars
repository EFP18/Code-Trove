{{!-- using materialize --}}
{{!-- rendering all posts for the home page --}}

<div class="row">
  <div class="col s12 m10 offset-m1 l8 offset-l2">
    {{!-- <div class="card-panel center"> --}}
      {{#each posts}}
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <p class="language">{{this.language}}</p>
          <span class="card-title">{{this.title}}</span>
          <pre><code>{{this.body}}</code></pre>
          <p class="metadata">Posted by {{user.username}} on {{format_date createdAt}}</p>
        </div>
        <div class="card-action">
          {{!-- TODO: add increase for likes --}}
          <a href="#">Like</a>
          <a href="#">Save</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>






