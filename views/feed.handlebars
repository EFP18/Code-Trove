{{!-- using materialize --}}
{{!-- rendering all posts for the home page --}}

<div class="row">
  <div class="col s12 m4 l2"></div>
  <div class="col s12 m4 l8">
    {{#each posts}}
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{this.title}}</span>
          <p>{{this.body}}</p>
          <p class="metadata">Posted by {{user.username}} on {{format_date createdAt}}</p>
        </div>
        <div class="card-action">
          {{!-- TODO: add increase for likes --}}
          <a href="#">Like</a>
          <a href="#">Save</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>




